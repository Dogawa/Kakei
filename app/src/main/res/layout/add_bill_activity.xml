<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lb_money"
        android:text="@string/add_bill_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etv_add_bill_money"
        android:layout_width="100dp"
        android:inputType="number"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_bill_date"/>
    <DatePicker
        android:layout_width="wrap_content"
        android:id="@+id/etv_add_bill_date"
        android:layout_height="wrap_content"></DatePicker>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_bill_genre"/>
    <EditText
        android:id="@+id/etv_add_bill_genre"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_bill_about"/>
    <EditText
        android:id="@+id/etv_add_bill_about"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_add_bill_add"
        android:text="@string/add_bill_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>